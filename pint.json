{
  "preset": "laravel",
  "rules": {
    "array_syntax": true,
    "declare_parentheses": true,
    "declare_strict_types": true,
    "final_class": true,
    "blank_line_before_statement": {
      "statements": [
        "break",
        "continue",
        "declare",
        "return",
        "throw",
        "try"
      ]
    },
    "method_argument_space": {
      "on_multiline": "ensure_fully_multiline",
      "keep_multiple_spaces_after_comma": true
    },
    "use_arrow_functions": true,
    "ordered_traits": true,
    "void_return": true
  }
}
